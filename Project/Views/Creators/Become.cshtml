@model BecomeCreatorFormModel

@{ ViewBag.Title = "Become Creator"; }

<div class="row">
    <div class="col-sm-12 offset-lg-12 col-lg12 offset-xl2-12 col-xl-12">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Argus">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <h4 class="heading-margin text-center">Chose Avatar</h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-6">
                        <img class="card-img-top" img src="~/Golganneth.jpg" />
                        <div class="card-body">
                            <input class="btn btn-primary mt-6" type="submit" value="Become" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-6">
                        <img class="card-img-top" img src="~/Aggramar.jpg" />
                        <div class="card-body">
                            <input class="btn btn-primary mt-6" type="submit" value="Become" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-6">
                        <img class="card-img-top" img src="~/Khaz.jpg" />
                        <div class="card-body">
                            <input class="btn btn-primary mt-6" type="submit" value="Become" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

    

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}