@model AllPlanetsQueryModel

@{
    ViewData["Title"] = "All Planets";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Search...">
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalPlanets / AllPlanetsQueryModel.PlanetsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Planets"
           asp-action="All"
           asp-route-currentPage="@previousPage)"
           asp-route-searchTerm="@Model.SearchTerm"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-right @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
           asp-controller="Planets"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm">>></a>
    </div>
</div>

@if (!Model.Planets.Any())
{
    <h2 class="text-xl-center">No planets found by the given criteria!</h2>
}

<div class="row">
    @foreach (var planet in Model.Planets)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@planet.ImageUrl" alt="@planet.Name @planet.PlanetarySystem">
                <div class="card-body">
                    <h5 class="card-title">@planet.Name (@planet.PlanetarySystem)</h5>
                    <a asp-controller="Planets" asp-action="Details" asp-route-id="@planet.Id" class="btn btn-primary">View More</a>
                </div>
            </div>
        </div>
    }
</div>
