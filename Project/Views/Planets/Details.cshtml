@model PlanetDetailsServiceModel

<dl class="row">
    <dt class="col-sm-3">Planet Name:</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Orbital Distance:</dt>
    <dd class="col-sm-9">@Model.OrbitalDistance AU</dd>

    <dt class="col-sm-3">Orbital Period:</dt>
    <dd class="col-sm-9">@Model.OrbitalPeriod years</dd>

    <dt class="col-sm-3">Radius:</dt>
    <dd class="col-sm-9">@Model.Radius km</dd>

    <dt class="col-sm-3">Atmospheric Pressure:</dt>
    <dd class="col-sm-9">@Model.AtmosphericPressure atmospheres</dd>

    @if (Model.SurfaceTemperature != null)
    {
        <dt class="col-sm-3">Surface Temperature:</dt>
        <dd class="col-sm-9">@Model.SurfaceTemperature °C</dd>
    }

    <dt class="col-sm-3">Analysus:</dt>
    <dd class="col-sm-9">@Model.Analysis</dd>

    <dt class="col-sm-3">Planetary System:</dt>
    <dd class="col-sm-9">@Model.PlanetarySystemName</dd>

    <dt class="col-sm-3">Total Moons:</dt>
    <dd class="col-sm-9">@Model.Moons.Count()</dd>

    <dt class="col-sm-3">Total Minerals:</dt>
    <dd class="col-sm-9">@Model.Minerals.Count()</dd>
</dl>
    <img class="card-img-top" src="@Model.ImageUrl">