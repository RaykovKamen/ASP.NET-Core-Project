@model IndexViewModel

@{
    ViewData["Title"] = "Space Initiatives";
}

@if (!Model.Planets.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Space Initiative!</h1>
        <p class="lead">There are no planets in the system, you may add one!</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Planets" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Planet</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Planets.Count; i++)
        {
            var planet = Model.Planets[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@planet.ImageUrl" alt="@planet.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@planet.Id">@planet.Name</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4">
            @Model.TotalPlanets Planets
        </h2>
        <h2 class="col-md-4">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4">
            @Model.TotalMisions Misions
        </h2>
    </div>
</div>